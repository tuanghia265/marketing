<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
</head>

<style>
    h1 {
        font-family: arial, sans-serif;
    }
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }
    
    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    
    tr:nth-child(even) {
      background-color: #dddddd;
    }
</style>

<body>
    <h1 style="display: flex; justify-content: center;">Users Infomation</h1>
    <table>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Action</th>
        </tr>

        <% for (let i = 0; i < dataTable.length; i++) { %>
            <tr>
                <td><%= dataTable[i].userName %></td>
                <td><%= dataTable[i].email %></td>
                <td><%= dataTable[i].roleID %></td>
                <td>
                  <a href="/edit-crud/?id=<%= dataTable[i].id%>" class="btn-edit" type="button">Edit</a>
                  <a href="/del-crud/?id=<%=dataTable[i].id%>" class="btn-del" type="button">Delete</a>
              </td>
            </tr>
        <% } %>
        
    </table>
</body>
</html>